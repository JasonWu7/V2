{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Bar chart with text labels. Set domain to make the frame cover the labels.",
    "data": {
        "url": "https://raw.githubusercontent.com/JasonWu7/V2/main/data/extracted_world_data.csv"
    },
    "width": "container",
      "height": "container",
      "config": {
        "background": "transparent"
      },
    "transform": [
      {
        "calculate": "datum.Percentage * datum.Population",
        "as": "PercentageTimesPopulation"
      }
    ],
    "mark": "bar",
  "encoding": {
    "color": {
      "value": "#08B2E3"
    },
    "x": {
      "field": "PercentageTimesPopulation",
      "type": "quantitative",
      "title": "The total number of global patients for each category"
    },
    "y": {
      "field": "Category",
      "type": "nominal",
      "title": "Mental health disorders category",
      "sort": "-x"
    },
    "tooltip": [
      { "field": "Category", "type": "nominal", "title": "Category" },
      { "field": "PercentageTimesPopulation", "type": "quantitative", "format": ",.0f", "title": "Total number of global patients for this category" }
    ]
  }
}